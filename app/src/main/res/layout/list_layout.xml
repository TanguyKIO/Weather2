<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/forecastIcon"
        android:contentDescription="@string/weather_desc"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/forecastDate"
        app:layout_constraintEnd_toStartOf="@id/f_sunglasses"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/forecastTemp"
        app:layout_constraintTop_toTopOf="@+id/forecastDate" />

    <TextView
        android:id="@+id/forecastDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lgc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forecastTemp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Some date" />

    <TextView
        android:id="@+id/forecastTemp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/lgc"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/forecastDate"
        app:layout_constraintEnd_toStartOf="@id/forecastIcon"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/forecastDate"
        app:layout_constraintTop_toTopOf="@+id/forecastDate"
        tools:text="aaaaaaa" />


    <ImageView
        android:id="@+id/f_sunglasses"
        android:contentDescription="@string/wears_desc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/f_winter_jacket"
        app:layout_constraintEnd_toStartOf="@id/f_sweater"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/forecastIcon"
        app:layout_constraintTop_toTopOf="@+id/forecastIcon"/>

    <ImageView
        android:id="@+id/f_sweater"
        android:contentDescription="@string/wears_desc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/f_windbreaker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/f_sunglasses"
        app:layout_constraintTop_toTopOf="@+id/forecastIcon"/>

    <ImageView
        android:id="@+id/f_winter_jacket"
        android:contentDescription="@string/wears_desc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/forecastIcon"
        app:layout_constraintEnd_toStartOf="@id/f_windbreaker"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/forecastIcon"
        app:layout_constraintTop_toBottomOf="@+id/f_sunglasses"/>

    <ImageView
        android:id="@+id/f_windbreaker"
        android:contentDescription="@string/wears_desc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/forecastIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/f_winter_jacket"
        app:layout_constraintTop_toBottomOf="@+id/f_sweater"/>


</androidx.constraintlayout.widget.ConstraintLayout>